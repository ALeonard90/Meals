<link rel="stylesheet" type="text/css" href="../css/index.css" />

<h2>Welcome and Happy Holidays, <%= current_user.name%>! </h2>

<div class ="usermeals">
	<div class="createmeal">
		<h2><a href='/meal/create'>Submit A Meal</a></h2>
	</div>
<h2>Previously Submitted Meals: </h2>
	<% @user_meals.each do |m| %>
	<div class ="meal">
		<%= m.name %>
		<%= m.will_feed %>
		<%= m.pickup_time %>
		<%= m.pickup_location %>
	</div>
	<% end %>
	<div class="meal_links">
	<a href="/meal/update">Update Meal Donation</a> <a href="/meal/delete">Delete Meal Donation</a>
	</div>
</div>

<div class ="usercans">
	<div class="createcan">
		<h2><a href='/cannedfood/create'>Make New Can Donation</a></h2>
	</div>
<h2>Previous Can Donations:</h2>
	<% @user_cans.each do |c| %>
	<div class ="can">
		<%= c.num_cans %>
		<%= c.container %>
		<%= c.pickup_time %>
		<%= c.pickup_location %>
	</div>
	<% end %>
	<div class="can_links">
	<a href="/can/update">Update Can Donation</a> <a href="/can/delete">Delete Can Donation</a> 
	</div>
</div>

<div class ="usergreetings">
	<div class="createmeal">
		<h2><a href='/greeting/create'>Compose a Holiday Greeting</a></h2>
	</div>
<h2>Greetings Submitted:</h2>
<% @user_greetings.each do |g| %>
<div class ="greeting">
		<%= g.body %>
	</div>
	<% end %>
	<div class="greeting_links">
	<a href="/greeting/update">Update Greeting</a> <a href="/greeting/update">Delete Greeting</a>
	</div>
</div>