<%= erb(:header, :layout => false) %>
<link type="text/css" rel="stylesheet" href="/css/styles.css">
<div class="wrapper">
  <div id="box">
    <center><div id="bag"><img src="http://i.imgur.com/8wtpSqu.png" alt="bag"/></div></center>
    <h3> Update Canned Donation: </h3>
      <form action="/cannedfood/update/<%= @can_to_edit.id %>" method="post">
        <input type="hidden" name="_method" value= "put">
        <p>How many canned goods are you willing to part with? :</p>
        <input type="integer" name="num_cans" placeholder="<%=@can_to_edit.num_cans%>">
        <p>Have a container to put them in (Yes/No) ?:</p>
        <input type="text" name="container" placeholder="<%=@can_to_edit.container%>">
        <p>Pickup Date(Dec.20-Jan.4) / Time :</p>
        <input type="text" name="12-22 4:30pm" placeholder="<%=@can_to_edit.pickup_date%>">
	       <p>Pickup Location:</p>
        <input type="text" name="pickup_location" placeholder="<%=@can_to_edit.pickup_location%>">
          <input type="submit" value="Submit!">
          <input id="submit" type="submit" value="Update!"/>
      </form>
    </div>
  </div>
